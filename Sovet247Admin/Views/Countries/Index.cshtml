@model IEnumerable<Sovet247Admin.Models.Country>

@{
    ViewBag.Title = "Страны";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Страны</h2>

<p>
    @Html.ActionLink("Добавить страну", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Код страны
        </th>
        <th>
            Наименование страны
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.country_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country_name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.CountryId }) |
            @*Html.ActionLink("Подробности", "Details", new { id=item.CountryId }) |*@
            @Html.ActionLink("Удалить", "Delete", new { id=item.CountryId })
        </td>
    </tr>
}

</table>
