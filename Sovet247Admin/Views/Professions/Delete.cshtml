@model Sovet247Admin.Models.Profession

@{
    ViewBag.Title = "Удаление профессии";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удаление профессии</h2>

<h3>Вы действительно хотите удалить профессию?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Profession_Title, "Профессия")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profession_Title)
        </dd>

        <dt>
            @Html.LabelFor(model => model.Active, "Активна")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("К списку профессий", "Index")
        </div>
    }
</div>
