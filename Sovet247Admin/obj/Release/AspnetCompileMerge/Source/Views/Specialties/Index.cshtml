@model IEnumerable<Sovet247Admin.Models.Specialty>

@{
    ViewBag.Title = "Специальности";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Специальности</h2>

<p>
    @Html.ActionLink("Добавить специальность", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Специальность
        </th>
        <th>
            Активна
        </th>
        <th>
            Профессия
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Specialty_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profession.Profession_Title)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.SpecialtyId }) |
            @Html.ActionLink("Подробности", "Details", new { id=item.SpecialtyId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.SpecialtyId })
        </td>
    </tr>
}

</table>
